<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/castmember_thumbnail"
        android:layout_width="85.5dp"
        android:layout_height="128.25dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_for_lint"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/alsen" />


    <TextView
        android:id="@+id/character_name"
        android:layout_width="85.5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/castmember_thumbnail"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="Baby" />


    <TextView
        android:id="@+id/actor_name"
        android:layout_width="85.5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="Ansel Elgort" />


</RelativeLayout>